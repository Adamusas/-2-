    running = True
    fps = 60


    def j():
        print('j')


    main_window = Window([Button(100, 100, 100, 100, 'START', 50, (255, 0, 0), j)], BackGround('mainmenu.gif'))

    active_window = 'main'
    dict_windows = {'main': main_window

                    }

    while running:
